<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    
    <one.empty3.feature.app.maxSdk29.pro.FaceOverlayView
            android:id="@+id/face_overlay"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:minHeight="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:flow_horizontalAlign="start"
            app:layout_constraintBottom_toTopOf="@id/polygon_details"
            />
    
    <one.empty3.feature.app.maxSdk29.pro.FaceOverlayView
            android:id="@+id/polygon_details"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:minHeight="300dp"
            app:layout_constraintTop_toBottomOf="@id/face_overlay"
            app:flow_horizontalAlign="start"
            app:layout_constraintBottom_toTopOf="@id/face_draw_settings_back"
            />
    <Button
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:id="@+id/choose_color"
            app:layout_constraintBottom_toTopOf="@id/choose_image"
            android:text="@string/choose_color"
            app:layout_constraintTop_toBottomOf="@id/polygon_details"
            />
    <Button
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:id="@+id/choose_image"
            app:layout_constraintBottom_toTopOf="@id/face_draw_settings_back"
            android:text="@string/choose_image"
            app:layout_constraintTop_toBottomOf="@id/choose_color"
            />
    <Button
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:id="@+id/face_draw_settings_back"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/title_activity_visual_face_effects"
            app:layout_constraintTop_toBottomOf="@id/choose_image"
            />
</androidx.constraintlayout.widget.ConstraintLayout>