<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<one.empty3.feature.app.maxSdk29.pro.FaceOverlayView
        android:id="@+id/face_overlay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:minHeight="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_horizontalAlign="start"
        app:layout_constraintBottom_toTopOf="@id/face_detection"/>

    <Button
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:id="@+id/face_detection"
            app:layout_constraintTop_toBottomOf="@id/face_overlay"
            app:layout_constraintBottom_toTopOf="@id/face_draw_settings"
            android:text="@string/draw_face_mask"
            />
    
    <Button
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:id="@+id/face_draw_settings"
            app:layout_constraintTop_toBottomOf="@id/face_detection"
            app:layout_constraintBottom_toTopOf="@id/back_to_main2"
            android:text="@string/face_drawing_settings"
            />
    <Button
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:id="@+id/back_to_main2"
            app:layout_constraintTop_toBottomOf="@id/face_draw_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/back_to_main"
            />

</androidx.constraintlayout.widget.ConstraintLayout>