<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E6E6"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    android:theme="?android:attr/buttonBarButtonStyle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextCalculus"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:autofillHints="@string/edit_text_here_or_by_push_numbers"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/edit_text_here_or_by_push_numbers"
            android:inputType="textPersonName"
            android:labelFor="@id/answerText"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:ignore="DuplicateSpeakableTextCheck"
            android:theme="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:theme="?android:attr/buttonBarButtonStyle">

        <Button
            android:id="@+id/button1"

            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_1" />

        <Button
            android:id="@+id/button2"

            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_2" />

        <Button
            android:id="@+id/button3"

            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_3"
            android:textAlignment="viewStart"
            android:textColorHint="#FBD3D3" />

        <Button
            android:id="@+id/buttonParenthesisA"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/open_brace"
            android:textColorHighlight="#7E66A8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_4" />

        <Button
            android:id="@+id/button5"

            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_5" />

        <Button
            android:id="@+id/button6"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_6" />

        <Button
            android:id="@+id/buttonFunction"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="128dp"
            android:text="function(" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:theme="?android:attr/buttonBarButtonStyle">

        <Button
            android:id="@+id/button7"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_7" />

        <Button
            android:id="@+id/button8"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_8" />

        <Button
            android:id="@+id/button9"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_9" />

        <Button
            android:id="@+id/buttonParenthesis"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:width="48dp"
            android:text="@string/close_brace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dotButton"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/DOT" />

        <Button
            android:id="@+id/button0"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_0" />

        <Button
            android:id="@+id/equalButton"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/EQUALS" />

        <Button
            android:id="@+id/buttonComa"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/coma" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addButton"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ADD" />

        <Button
            android:id="@+id/multButton"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/MUL" />
        <!--
<Button
    android:id="@+id/sqrtButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="@string/sqrt"
    app:layout_constraintStart_toEndOf="@id/multButton"
    app:layout_constraintTop_toBottomOf="@id/equalButton" />
-->
        <Button
            android:id="@+id/delButton"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/DEL" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/substractButton"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/SUB" />

        <Button
            android:id="@+id/divideButton"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/DIV" />

        <Button
            android:id="@+id/expButton"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/EXP" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/answerText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/result"
            android:theme="?android:attr/buttonBarButtonStyle"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back2"
            android:theme="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:theme="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:theme="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>