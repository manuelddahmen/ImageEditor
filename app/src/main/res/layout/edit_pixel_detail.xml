<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_rowWeight="0.4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backToMain"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:hint="@string/go_to_previous_activity" />

        <one.empty3.feature.app.maxSdk29.pro.ImageViewSelection
            android:layout_width="match_parent"
            android:layout_height="300dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/p_x_y_color" />
        
        <EditText
                android:id="@+id/x"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="X line"
                />
        
        <EditText
                android:id="@+id/y"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="Y column"
                />

        <EditText
            android:id="@+id/z"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:autofillHints="Z deep">

        </EditText>

        <TextView
            android:id="@+id/textViewVarDoubleName"
            android:layout_width="124dp"
            android:layout_height="36dp"
            android:text="@string/name"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/textViewVarDoubleExpression"
            android:layout_width="386dp"
            android:layout_height="35dp"
            android:text="@string/expression"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="30dp" />

        <Button
            android:id="@+id/writeFormula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_formula"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/buttonAddBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonCodeBefore"
            tools:layout_editor_absoluteX="319dp" />

        <Button
            android:id="@+id/buttonAddAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonCodeAfter"
            tools:layout_editor_absoluteX="237dp" />


        <Button
            android:id="@+id/buttonBackToGraphics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backToGraphics"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="672dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>